<div class="card" style="width: 18rem;">
  <%= cl_image_tag @member.photo.key, height: 300, width: 400, crop: :fill %>
  <div class="card-body">
    <h5 class="card-title"><%= member.first_name %> <%= member.last_name %></h5>
    <p class="card-text"><%= member.role %></p>
    <p class="card-text"><%= member.description %></p>
    <p class="card-text"><%= member.email %></p>
    <p class="card-text"><%= member.liens %></p>
    <a href="<%= member.instagram %>"><i class="fab fa-instagram"></i></a>
  </div>
</div>
