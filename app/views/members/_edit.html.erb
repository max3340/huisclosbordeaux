<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h4 class="modal-title" id="myModalLabel">Ajouter un membre</h4>
</div>
<div class="modal-body">
  <%= simple_form_for([@member]) do |f| %>
  <%= f.input :first_name, label: "Prénom", as: :string, required: true %>
  <%= f.input :last_name, label: "Nom", as: :string, required: true %>
  <%= f.label "Photo de profil" %>
  <%= f.file_field :cover_photo, label: "Photo de profil" %>
  <br>
  <%= f.input :role, label: "Quel est le rôle du membre ?", as: :string %>
  <%= f.input :description, label: "Une description rapide ?", as: :text %>
  <%= f.input :email, label: "e-mail", as: :string %>
  <%= f.input :instagram, label: "Lien instagram", as: :string %>
  <%= f.input :liens, label: "Autres liens", as: :string %>
  <%= f.submit "Modifier le membre", class: "btn btn-primary" %>
  <% end %>
</div>
