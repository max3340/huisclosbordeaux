<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <div class="form-inscription">
        <div class="inscription2">
          <div class="new-formation-card p-4">
            <%= simple_form_for([@member]) do |f| %>
            <%= f.input :first_name, as: :string, required: true %>
            <%= f.input :last_name, as: :string, required: true %>
            <%= f.input :role, as: :string %>
            <%= f.input :description, as: :text %>
            <%= f.input :email, as: :string %>
            <%= f.input :instagram, as: :string %>
            <%= f.input :liens, as: :string %>
            <%= f.submit "Ajouter un membre", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
